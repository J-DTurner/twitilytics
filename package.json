{
  "name": "twitilytics",
  "version": "1.0.0",
  "description": "Twitilytics - Twitter Analytics with AI (Full Stack)",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" -p \"[{name}]\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && cross-env PORT=8001 DANGEROUSLY_DISABLE_HOST_CHECK=true FAST_REFRESH=false WDS_SOCKET_PORT=0 WDS_SOCKET_HOST='' CHOKIDAR_USEPOLLING=false BROWSER=none react-scripts start",
    "build": "cd frontend && react-scripts build",
    "test": "jest",
    "test:frontend": "cd frontend && react-scripts test",
    "install:clean": "rm -rf node_modules backend/node_modules frontend/node_modules && npm install"
  },
  "dependencies": {
    "@polar-sh/express": "^0.3.0",
    "axios": "^1.6.2",
    "chart.js": "^4.4.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html2pdf.js": "^0.10.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1",
    "react-router-hash-link": "^2.4.3",
    "react-scripts": "5.0.1",
    "resend": "^4.5.1",
    "stripe": "^14.5.0",
    "web-vitals": "^3.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "proxy": "http://localhost:3001",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "twitter",
    "analytics",
    "AI",
    "express",
    "node",
    "react",
    "fullstack"
  ],
  "author": "Twitilytics Team",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
